<Window
    x:Class="iPark.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:iPark"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="weather"
    Width="1400"
    Height="768"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="275" />
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.3"
                        ShadowDepth="5" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="17*" />
                <ColumnDefinition Width="33*" />
            </Grid.ColumnDefinitions>

            <Image
                Grid.Column="1"
                Width="250"
                Height="250"
                Margin="0,30,30,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Source="Assets/iPark.png" />

            <Border
                Grid.ColumnSpan="2"
                Width="500"
                Height="300"
                Margin="60,50,0,0"
                Padding="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.3"
                        ShadowDepth="5" />
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="TimeText"
                            Grid.Column="0"
                            FontSize="30"
                            Text="00:00:00 AM" />
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                x:Name="DateText"
                                Grid.Row="0"
                                FontSize="20"
                                Text="MM/DD/YYYY" />
                            <TextBlock
                                x:Name="WeekdayText"
                                Grid.Row="1"
                                FontSize="20"
                                Text="Monday" />
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            d:Text="Emoji"
                            FontSize="30" />
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                d:Text="Weather (C)"
                                FontSize="20" />
                            <TextBlock
                                Grid.Row="1"
                                d:Text="Conditions"
                                FontSize="20" />
                        </Grid>
                    </Grid>

                    <TextBlock
                        Grid.Row="2"
                        FontSize="30"
                        Text="Foshan, China" />
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1">
            <Grid
                Grid.ColumnSpan="2"
                Height="300"
                Margin="30,0,30,30"
                VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            d:Text="Icon Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="1"
                            d:Text="Data Type Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="2"
                            d:Text="Data Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="3"
                            d:Text="Measurement Unit here (km/hr)"
                            FontSize="10" />
                    </Grid>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            d:Text="Icon Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="1"
                            d:Text="Data Type Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="2"
                            d:Text="Data Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="3"
                            d:Text="Measurement Unit here (km/hr)"
                            FontSize="10" />
                    </Grid>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            d:Text="Icon Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="1"
                            d:Text="Data Type Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="2"
                            d:Text="Data Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="3"
                            d:Text="Measurement Unit here (km/hr)"
                            FontSize="10" />
                    </Grid>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            d:Text="Icon Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="1"
                            d:Text="Data Type Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="2"
                            d:Text="Data Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="3"
                            d:Text="Measurement Unit here (km/hr)"
                            FontSize="10" />
                    </Grid>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            d:Text="Icon Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="1"
                            d:Text="Data Type Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="2"
                            d:Text="Data Here"
                            FontSize="20" />
                        <TextBlock
                            Grid.Row="3"
                            d:Text="Measurement Unit here (km/hr)"
                            FontSize="10" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
